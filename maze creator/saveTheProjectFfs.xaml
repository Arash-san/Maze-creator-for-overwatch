
<ui:ContentDialog x:Class="maze_creator.saveTheProjectFfs"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:ui="http://schemas.modernwpf.com/2019"
                  Title="Before you go..."
                  
                  PrimaryButtonText="Save it"
                  SecondaryButtonText="I don't need it"
                  CloseButtonText="Take me back"
                  DefaultButton="Primary">

    <StackPanel VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch">
        <!-- Content body -->

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition  Width="50" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <ui:BitmapIcon UriSource="assets/info.png" 
                           RenderOptions.BitmapScalingMode="HighQuality"
                           Width="35"/>

            <TextBlock Grid.Column="1"
                       VerticalAlignment="Center"
                       Text="You have an unsaved map. What do you want to do?"
                       TextWrapping="Wrap"
                       Width="290"
                       FontSize="12" />
        </Grid>
    </StackPanel>
    </ui:ContentDialog>
